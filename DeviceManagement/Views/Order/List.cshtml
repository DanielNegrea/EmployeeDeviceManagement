@model IEnumerable<Order>
@{
    ViewBag.Title = "Requests";
    Layout = "_AdminLayout";
}
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr><th>Name</th><th>Location</th><th colspan="2">Details</th><th></th></tr>
        @foreach (Order o in Model)
        {
            <tr>
                <td>@o.Name</td>
                <td>@o.Location</td>
                <th>Device</th>
                <th>Quantity</th>
                <td>
                    <form asp-action="MarkCompleted" method="post">
                        <input type="hidden" name="orderId" value="@o.ID" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Complete
                        </button>
                    </form>
                </td>
            </tr>
            @foreach (CartLine line in o.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@line.Device.Name</td>
                    <td>@line.Quantity</td>
                    <td></td>
                </tr>
            }
        }
    </table>
}
else
{
    <div class="text-center">No Pending Requests</div>
}
